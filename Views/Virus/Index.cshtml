@model IEnumerable<TareaClinicaProgra4.Models.Virus>

@{
    ViewData["Title"] = "Index";
}
<h1>Index</h1>
<p>
    <a asp-action="Create">Registrar Virus</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mortalidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contagio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Peligrosidad)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem=>item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mortalidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Contagio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Peligrosidad)
            </td>
            <td>
                <a asp-action="Delete" asp-route-id="@item.Id">Borrar</a>
            </td>
        </tr>
}
    </tbody>
</table>
